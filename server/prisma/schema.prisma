generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"  // âœ… Explicit output path
}


datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Property { 
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  type            Type
  price           String?
  location        Json
  address         String
  bedrooms        Int?
  bathrooms       Int?
  area            String
  status          PropertyStatus
  priorityLevel  Int     @default(0)
  thumbnail       String
  images          String[]
  amenities       String[]
  tags            String[]
  views           Int    @default(0)     
  propertyType    PropertyType
  virtualTourUrl  String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @default(now())
  ratingAndReview RatingAndReview[]
  enquiries       Enquiry[]
}

model RatingAndReview {
  id        String     @id   @default(auto()) @map("_id") @db.ObjectId
  propertyId String    @db.ObjectId
  name       String?
  email      String
  rating     Int
  review     String
  approved   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  Property   Property   @relation(fields: [propertyId],references: [id])
}

model Enquiry {
  id     String    @id @default(auto()) @map("_id") @db.ObjectId
  propertyId String  @db.ObjectId
  name    String
  email   String   
  message  String
  status    EnquiryStatus
  createdAt  DateTime  @default(now())
  Property Property    @relation(fields: [propertyId],references: [id])
}

model Contacts {
  id    String   @id  @default(auto())  @map("_id") @db.ObjectId
  name  String
  email String?  @unique
  number String[] 
  address String?
  createdAt  DateTime  @default(now())
}

enum PropertyType {
  PLOT
  APARTMENT
  HOUSE
  VILLAY
  FACTORY
}

enum EnquiryStatus {
  PENDING
  RESPONDED
  CLOSED
}

enum Type {
  SALE
  RENT
}

enum PropertyStatus {
  AVAILABLE
  SOLD
  RENTED
  PENDING
}


enum PropertySubType {
  RENT
  BUY
}
